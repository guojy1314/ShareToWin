<!--index.wxml-->
<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
<form bindsubmit='search'>
  <view class="search flex-wrp">
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" name='type'>
        <view class="search-option">{{array[index]}}
        </view>
      </picker>
    <view class="search-left flex-item">
      <input placeholder=" 搜索问题，回答或资源" placeholder-class="search-placeholder" name="keywords"/>
    </view>
    <view class="search-right flex-item" form-type='search'>
      <image src="../../images/lighting.png"></image>
    </view>
  </view>
</form>

  <view wx:for="{{answerList}}" wx:for-item="ans" wx:key="{{ans._id}}">
    <view class="feed-item">
      <view class="feed-content">
        <view class="question" bindtap="goToQuestion" data-id='{{ans.q_id}}'>
          <text>{{ans.title}}</text>
        </view>
        <view class="answer-body" bindtap='goToAnswer' data-id='{{ans._id}}'>
          <view>
            <text class="answer-txt">{{ans.detail}}</text>
          </view>
          <view class="answer-actions">
            <view class="like dot">
              <a>{{ans.good_nums}} 赞同 </a>
            </view>
            <view class="follow-it">
              <a>回答时间：{{ans.date}}</a>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>

<view class='endofPage'>
  <text>———— · 我们是有底线的 · ————</text>
</view>